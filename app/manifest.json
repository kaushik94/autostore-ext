{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/courier_dota.png",
    "128": "images/courier_dota.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "scripts/chromereload.js",
      "scripts/background.js"
    ]
  },
  "permissions": [
    "<all_urls>",
    "debugger",
    "webRequest",
    "webRequestBlocking", 
    "tabs",
    "clipboardRead",
    "clipboardWrite"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/courier_dota.png",
      "38": "images/courier_dota.png"
    },
    "default_title": "dev-autostore-ext"
  }
}
